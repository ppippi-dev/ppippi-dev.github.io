---
import { SITE_TITLE } from '../consts';

interface Props {
	slug?: string;
}

const { slug } = Astro.props;
const enLink = slug ? `/en/blog/${slug}/` : '/en/';
---

<header>
	<nav>
		<div class="branding">
			<a href="/" class="site-title">{SITE_TITLE}</a>
		</div>
		<div class="nav-links">
			<a href={enLink}>EN</a>
			<a href="https://www.linkedin.com/in/parkjeongbin/" target="_blank" aria-label="LinkedIn">
				<svg viewBox="0 0 16 16" width="18" height="18"><path fill="currentColor" d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"></path></svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 40px;
		background: white;
		border-bottom: 1px solid #f0f0f0;
		position: sticky;
		top: 0;
		z-index: 100;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 800px;
		margin: 0 auto;
		height: 56px;
	}
	.branding {
		display: flex;
		align-items: center;
	}
	.site-title {
		font-size: 1rem;
		font-weight: 600;
		color: #111;
		text-decoration: none;
		letter-spacing: -0.3px;
	}
	.site-title:hover {
		color: #111;
	}
	.nav-links {
		display: flex;
		align-items: center;
		gap: 20px;
	}
	.nav-links a {
		display: flex;
		align-items: center;
		color: #555;
		text-decoration: none;
		font-size: 0.875rem;
		font-weight: 500;
		transition: color 0.15s;
	}
	.nav-links a:hover {
		color: #111;
	}
	@media (max-width: 768px) {
		header {
			padding: 0 20px;
		}
		nav {
			height: 52px;
		}
		.site-title {
			font-size: 0.95rem;
		}
		.nav-links {
			gap: 16px;
		}
		.nav-links a {
			font-size: 0.85rem;
		}
	}
</style>
