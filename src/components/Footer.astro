---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<span class="copyright">&copy; {today.getFullYear()} ppippi-dev</span>
		<div class="footer-links">
			<a href="https://github.com/ppippi-dev" target="_blank" rel="noopener noreferrer">GitHub</a>
			<a href="https://www.linkedin.com/in/parkjeongbin/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
		</div>
	</div>
</footer>

<style>
	footer {
		padding: 32px 24px;
		border-top: 1px solid var(--border-color);
	}

	.footer-content {
		max-width: 720px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.copyright {
		font-size: 0.8125rem;
		color: var(--text-muted);
	}

	.footer-links {
		display: flex;
		gap: 16px;
	}

	.footer-links a {
		font-size: 0.8125rem;
		color: var(--text-muted);
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.footer-links a:hover {
		color: var(--text-primary);
		text-decoration: none;
	}

	@media (max-width: 768px) {
		footer {
			padding: 24px 20px;
		}

		.footer-content {
			flex-direction: column;
			gap: 12px;
			text-align: center;
		}
	}
</style>
