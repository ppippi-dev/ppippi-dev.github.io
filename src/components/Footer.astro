---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<span class="copyright">&copy; {today.getFullYear()} ppippi-dev</span>
	</div>
</footer>
<style>
	footer {
		padding: 32px 40px;
		border-top: 1px solid #f0f0f0;
		background: white;
	}
	.footer-content {
		max-width: 800px;
		margin: 0 auto;
	}
	.copyright {
		font-size: 0.8rem;
		color: #888;
	}
	@media (max-width: 768px) {
		footer {
			padding: 24px 20px;
		}
	}
</style>
