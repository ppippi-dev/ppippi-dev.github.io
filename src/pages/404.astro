---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={`404 - ${SITE_TITLE}`} description="페이지를 찾을 수 없습니다." />
		<script is:inline>
			(function() {
				const path = window.location.pathname;

				// 옛 URL 패턴: /YYYY/MM/DD/slug/ → /blog/slug/
				const koMatch = path.match(/^\/(\d{4})\/(\d{2})\/(\d{2})\/(.+?)\/?$/);
				if (koMatch) {
					const slug = koMatch[4];
					window.location.replace('/blog/' + slug + '/');
					return;
				}

				// 옛 URL 패턴: /en/YYYY/MM/DD/slug/ → /en/blog/slug/
				const enMatch = path.match(/^\/en\/(\d{4})\/(\d{2})\/(\d{2})\/(.+?)\/?$/);
				if (enMatch) {
					const slug = enMatch[4];
					window.location.replace('/en/blog/' + slug + '/');
					return;
				}

				// GA4 404 에러 추적
				if (typeof gtag === 'function') {
					gtag('event', '404_error', {
						page_path: path,
						page_referrer: document.referrer || '(direct)'
					});
				}
			})();
		</script>
		<style>
			main {
				width: 100%;
				max-width: 800px;
				margin: 0 auto;
				padding: 100px 40px;
				text-align: center;
			}
			h1 {
				font-size: 4rem;
				margin: 0 0 16px 0;
				color: #333;
			}
			p {
				color: #666;
				font-size: 1.1rem;
				margin-bottom: 32px;
			}
			a {
				color: #111;
				text-decoration: underline;
			}
			a:hover {
				color: #555;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>404</h1>
			<p>페이지를 찾을 수 없습니다.</p>
			<a href="/">홈으로 돌아가기</a>
		</main>
		<Footer />
	</body>
</html>
