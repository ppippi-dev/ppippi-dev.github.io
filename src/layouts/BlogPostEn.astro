---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Giscus from '../components/Giscus.astro';
import HeaderEn from '../components/HeaderEn.astro';

type Props = CollectionEntry<'blog-en'>['data'] & { slug?: string };

const { title, description, pubDate, updatedDate, heroImage, tags, slug } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 800px;
				margin: 0 auto;
				padding: 60px 40px;
			}
			article {
				width: 100%;
			}
			.post-header {
				margin-bottom: 40px;
			}
			.post-header-top {
				text-align: center;
				margin-bottom: 24px;
			}
			.post-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 8px;
				justify-content: center;
				margin-bottom: 20px;
			}
			.post-tag {
				color: #666;
				font-size: 0.9rem;
				font-weight: 500;
				text-decoration: none;
				padding: 6px 16px;
				border: 1px solid #ddd;
				border-radius: 20px;
				transition: all 0.2s;
			}
			.post-tag:hover {
				border-color: #35C5F0;
				color: #35C5F0;
			}
			.post-title {
				font-size: 2rem;
				font-weight: 700;
				color: #000;
				margin: 0 0 12px 0;
				line-height: 1.3;
				letter-spacing: -0.3px;
			}
			.post-description {
				font-size: 1rem;
				color: #666;
				margin: 0;
				line-height: 1.5;
			}
			.post-meta {
				display: flex;
				align-items: center;
				gap: 16px;
				font-size: 0.9rem;
				color: #999;
				margin-top: 24px;
			}
			.post-meta time {
				color: #999;
			}
			.last-updated {
				font-style: italic;
			}
			.lang-toggle {
				margin-left: auto;
				color: #555;
				font-size: 0.85rem;
				font-weight: 500;
				text-decoration: none;
				padding: 4px 12px;
				border: 1px solid #ddd;
				border-radius: 4px;
				transition: all 0.2s;
			}
			.lang-toggle:hover {
				border-color: #111;
				color: #111;
			}
			.post-content {
				color: rgb(51, 51, 51);
				font-size: 1rem;
				line-height: 1.75;
			}
			.post-content h2 {
				font-size: 1.5rem;
				font-weight: 600;
				margin: 2rem 0 0.75rem 0;
				color: #000;
			}
			.post-content h3 {
				font-size: 1.25rem;
				font-weight: 600;
				margin: 1.75rem 0 0.5rem 0;
				color: #000;
			}
			.post-content h4 {
				font-size: 1.1rem;
				font-weight: 600;
				margin: 1.5rem 0 0.5rem 0;
				color: #000;
			}
			.post-content p {
				margin: 0 0 1.5rem 0;
			}
			.post-content ul, .post-content ol {
				margin: 0 0 1.5rem 0;
				padding-left: 1.5rem;
			}
			.post-content li {
				margin-bottom: 0.5rem;
			}
			.post-content a {
				color: #35C5F0;
				text-decoration: none;
			}
			.post-content a:hover {
				color: #0099CC;
				text-decoration: underline;
			}
			.post-content blockquote {
				border-left: 3px solid #e0e0e0;
				padding: 0.75rem 0 0.75rem 1.25rem;
				margin: 1.25rem 0;
				color: #555;
			}
			.post-content blockquote p {
				margin: 0;
			}
			.post-content pre {
				background: #1e1e1e;
				border-radius: 8px;
				padding: 1.25rem;
				overflow-x: auto;
				margin: 1.5rem 0;
			}
			.post-content code {
				font-family: 'Fira Code', 'Consolas', monospace;
				font-size: 0.8em;
			}
			.post-content :not(pre) > code {
				background: #f0f0f0;
				padding: 0.2em 0.4em;
				border-radius: 4px;
				color: #e83e8c;
			}
			.post-content img {
				max-width: 100%;
				height: auto;
				border-radius: 8px;
				margin: 1.5rem 0;
			}
			.post-content hr {
				border: none;
				border-top: 1px solid #eee;
				margin: 2rem 0;
			}
			.post-footer {
				margin-top: 60px;
				padding-top: 30px;
				border-top: 1px solid #eee;
			}
			.post-footer-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 8px;
			}
			.post-footer-tags span {
				color: #999;
				font-size: 0.9rem;
				margin-right: 8px;
			}
			.footer-tag {
				color: #666;
				padding: 6px 16px;
				border: 1px solid #ddd;
				border-radius: 20px;
				font-size: 0.85rem;
				text-decoration: none;
				transition: all 0.2s;
			}
			.footer-tag:hover {
				border-color: #35C5F0;
				color: #35C5F0;
			}
			@media (max-width: 768px) {
				main {
					padding: 40px 20px;
				}
				.post-title {
					font-size: 1.5rem;
				}
				.post-description {
					font-size: 0.95rem;
				}
				.post-content {
					font-size: 0.95rem;
				}
				.post-content h2 {
					font-size: 1.3rem;
				}
				.post-content h3 {
					font-size: 1.15rem;
				}
			}
		</style>
	</head>

	<body>
		<HeaderEn slug={slug} />
		<main>
			<article>
				<header class="post-header">
					<div class="post-header-top">
						{tags && tags.length > 0 && (
							<div class="post-tags">
								{tags.map((tag: string) => (
									<a href={`/en/tags/${tag}/`} class="post-tag">{tag}</a>
								))}
							</div>
						)}
						<h1 class="post-title">{title}</h1>
						{description && (
							<p class="post-description">{description}</p>
						)}
					</div>
					<div class="post-meta">
						<FormattedDate date={pubDate} />
						{updatedDate && (
							<span class="last-updated">
								(Updated: <FormattedDate date={updatedDate} />)
							</span>
						)}
						{slug && (
							<a href={`/blog/${slug}/`} class="lang-toggle">KO</a>
						)}
					</div>
				</header>
				<div class="post-content">
					<slot />
				</div>
				{tags && tags.length > 0 && (
					<footer class="post-footer">
						<div class="post-footer-tags">
							<span>Tags:</span>
							{tags.map((tag: string) => (
								<a href={`/en/tags/${tag}/`} class="footer-tag">{tag}</a>
							))}
						</div>
					</footer>
				)}
				<Giscus lang="en" />
			</article>
		</main>
		<Footer />
	</body>
</html>
